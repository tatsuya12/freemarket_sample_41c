- breadcrumb :credit_detail
%main.l-container
  = render './items/side-bar'
  .l-content
    %section.l-card-container
      %h2.l-chapter-head
        クレジットカード情報入力
      %form#add-card-form.l-single-inner{action: "", method: "POST", :novalidate => "novalidate"}
        .l-single-content
          .form-group
            %label.card-info カード番号
            %span.form-require 必須
            %input#payment_card_no.input-default{maxlength:"19", :placeholder => "半角数字のみ", type: "text", value: ""}/
            %ul#card-no-error-wrapper.has-error-text
            %ul.signup-card-list
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?4136293187", width: "49"}/
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/master-card.svg?4136293187", width: "34"}/
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/saison-card.svg?4136293187", width: "30"}/
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/jcb.svg?4136293187", width: "32"}/
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/american_express.svg?4136293187", width: "21"}/
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/dinersclub.svg?4136293187", width: "32"}/
              %li
              %img{alt: "", height: "20", src: "//www-mercari-jp.akamaized.net/assets/img/card/discover.svg?4136293187", width: "32"}/
          .form-group.signup-form-expire
            %label.card-info 有効期限
            %span.form-require 必須
            %br
          .select-wrap
            %select.select-expire.select-default
              %option{value: "01"} 01
              %option{value: "02"} 02
              %option{value: "03"} 03
              %option{value: "04"} 04
              %option{value: "05"} 05
              %option{value: "06"} 06
              %option{value: "07"} 07
              %option{value: "08"} 08
              %option{value: "09"} 09
              %option{value: "10"} 10
              %option{value: "11"} 11
          %span 月
          %br
          .select-wrap
            %select.select-expire.select-default
              %option{value: "19"} 19
              %option{value: "20"} 20
              %option{value: "21"} 21
              %option{value: "22"} 22
              %option{value: "23"} 23
              %option{value: "24"} 24
              %option{value: "25"} 25
              %option{value: "26"} 26
              %option{value: "27"} 27
              %option{value: "28"} 28
          %span 年

          .form-group
            %label.card-info セキュリティコード
            %span.form-require 必須
            %input#payment_card_security_code.input-default{placeholder: "カード背面4桁もしくは3桁の番号", type: "number", value: ""}/
            %ul#security-code-error-wrapper.has-error-text
            .signup-seqcode
              .signup-seqcode-text
                .form-hidden{onclick: "changeVisible()"}
                  %span.form-question ?
                  カード裏面の番号とは？
                #info-hidden.signup-seqcode-info
                  カードの裏面をご参照ください。
                  %br/
                  %img{alt: "", src: "//www-mercari-jp.akamaized.net/assets/img/signup/seq-card.png?4136293187", width: "240"}/

          %button.submit-button.btn-default.btn-red{type: "button"} 追加する
= render './items/camera-button'
= render './items/app-banner'
= render './items/footer'
