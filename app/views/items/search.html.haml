- breadcrumb :search, @keyword
.search-container
  .search-container__l-content
    .search-container__l-content__items
      %header.search-container__l-content__items__head
        - if @items.size == 0
          = "検索結果 0件"
        - else
          = "検索結果 1 ~ #{@items.length}件"
      .search-container__l-content__items__result
        .items-box-parent
          - @items.each do |item|
            = render partial: "search_result", locals: { item: item }
  .search-container__l-side

= render 'camera-button'
= render 'app-banner'
= render 'footer'
